@model List<PlayerModel>
@{
    ViewData["Title"] = "LowestScores";
}

<body>
    <header class="masthead bg-primary text-white text-center">
        <div class="container d-flex align-items-center flex-column">

            <!-- Masthead Heading -->
            <h3 class="masthead-subheading font-weight-light mb-0">They Couldn't Stop Laughing!</h3>

            <table class="table">
                <thead>
                    <tr>
                        <th>Player Name</th>
                        <th>Score</th>
                        <th>Images</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var player in @Model)
                    {
                        <tr>
                            <td>@player.PlayerName</td>
                            <td>@player.Score</td>
                            <td>
                                @foreach (var pic in player.ImageList)
                                {
                                    <img src="@pic.ImageBase64String" width="160px"/>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


            <!-- Icon Divider -->
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            <!-- Masthead Subheading -->
            <p class="masthead-subheading font-weight-light mb-0"></p>

        </div>
    </header>
</body>


